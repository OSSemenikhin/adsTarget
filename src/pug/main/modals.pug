
section.modal.modal-call#modal
  .modal__container(data-goody-target="call")
    .modal__header
      button.modal__close
        svg.modal__icon-close(aria-hidden="true")
          use(xlink:href="img/svg/sprite.svg#close")
    .modal__content.modal-call__content
      h2.modal-call__title Заказать звонок
      p.modal-call__description Обычно, наш менеджеры перезванивают в течение двух часов в рабочее время
      form.modal-call__form
        input.modal-call__input(placeholder="Номер телефона")
        button.modal-call__button Заказать звонок
      p.modal-call__errors
      p.modal-call__prevention Нажимая на кнопку «Заказать звонок» вы соглашаетесь с
        a.modal-call__privacy(href="#")  правилами обработки персональных данных.

  .modal__container(data-goody-target="services")
    .modal__header
      button.modal__close
        svg.modal__icon-close(aria-hidden="true")
          use(xlink:href="img/svg/sprite.svg#close")
    .modal__content.modal-services__content
      .modal-services__label.modal-services-select__label#modalSelectMenuLabel Укажите тип услуги
      .modal-services-select#modalSelectMenu
      form.modal-services__form
        label.modal-services__label Опишите нишу и прикрепите ссылки наваши соц. сети и/или сайт
          br
          textarea.modal-services__input.modal-services__input--textarea(placeholder="Опишите ваш ситуацию...")
        label.modal-services__label Ваше имя
          br
          input.modal-services__input(placeholder="Иван Смирнов")
        label.modal-services__label Ваш телефон
          br
          input.modal-services__input(placeholder="+7 (999) 999-99-99")
        .modal-services-socials
          p.modal-services-socials__title Выберите способ связи
          .modal-services-socials__wrapper
            label.modal-services-socials__label(tabindex="0")
              input.modal-services-socials__input(type="radio" name="socials" value="WhatsApp" tabindex="-1")
              .modal-services-socials__icon
                svg.modal-services-socials__svg(aria-hidden="true")
                  use(xlink:href="img/svg/sprite.svg#whatsapp")
              br
              |WhatsApp
            label.modal-services-socials__label(tabindex="0")
              input.modal-services-socials__input(type="radio" name="socials" value="Telegramm" tabindex="-1")
              .modal-services-socials__icon
                svg.modal-services-socials__svg(aria-hidden="true")
                  use(xlink:href="img/svg/sprite.svg#telegram")
              br
              |Telegramm
            label.modal-services-socials__label(tabindex="0")
              input.modal-services-socials__input(type="radio" name="socials" value="Vk" tabindex="-1")
              .modal-services-socials__icon
                svg.modal-services-socials__svg(aria-hidden="true")
                  use(xlink:href="img/svg/sprite.svg#vk")
              br
              |Vk
        button.modal-services__button Заказать
